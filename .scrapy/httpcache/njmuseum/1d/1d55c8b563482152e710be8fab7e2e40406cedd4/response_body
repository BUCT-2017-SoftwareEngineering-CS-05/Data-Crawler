<script type="text/javascript">
    $(function(){ 
        var pic_num = parseInt($("input[name=pic_num]").val());
        var width = document.body.clientWidth;
        var max_width = 1423;
        var spanheight = $("#parametertitle").height();

        if(pic_num == 0){
            if(width<=max_width){
               $(".basicrightcon").css("height","544px"); 
               $(".gundongtiao").css("height",283-spanheight +"px");
           }else{
                $(".basicrightcon").css("height","690px");
                $(".gundongtiao").css("height",428-spanheight +"px");
           }
        }else{
            if(width<=max_width){ //360
               //$(".gundongtiao").css("height",413-spanheight +"px");
			   $(".gundongtiao").css("height","360px");
           }else{
                $(".gundongtiao").css("height",290-spanheight +"px");
           }

        }

        $(window).resize(function(){
            width = document.body.clientWidth;
            spanheight = $("#parametertitle").height();
            if(pic_num == 0){
                if(width<=max_width){
                   $(".basicrightcon").css("height","544px"); 
                   $(".gundongtiao").css("height",283-spanheight +"px");
               }else{
                    $(".basicrightcon").css("height","690px");
                    $(".gundongtiao").css("height",428-spanheight +"px");
               }
            }else{
                if(width<=max_width){ 
                   $(".gundongtiao").css("height",413-spanheight +"px");
               }else{
                    $(".gundongtiao").css("height",290-spanheight +"px");
               }

            }

        });
        

    });

</script>
<script type="text/javascript">
function tabpic(src,index){

    $("#da_pic").attr("src", src);
    var lis = $(".DB_thumMove").find("li");
    for(var i=0;i<lis.length;i++){
        lis[i].className = "grey_border";
    }
    lis[index].className = "red_border";

}
</script>
