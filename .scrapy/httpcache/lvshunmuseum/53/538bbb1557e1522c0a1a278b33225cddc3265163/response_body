    /*选项卡切换*/
    function clickTab(sender) {
        $(sender).addClass('selected').siblings().removeClass('selected');
        var index = $('#tab ul li').index(sender);
        $('div.tab_box > div').eq(index).show().siblings().hide();
        $('.down_arrow').hide();
        $('.down_arrow').eq(index).show();
    }

    /*查看新闻详细*/
    function showdetail() {
        showcasescontent.innerHTML = showcasedetail.innerHTML;
    }

    /*返回新闻列表*/
    function backshowList() {
        showcasescontent.innerHTML = showcaselist.innerHTML;
        wlPhoto(document.getElementById('photoshow'));
    }

    $(document).ready(function () {
        var $tab_li = $('#tab ul li');
        $tab_li.click(function () {
            clickTab(this);
        });
		
		$(".pslist>li").click(function(){
			var index=$(".pslist>li").index(this);
			$(".bigimglist>li").eq(index).fadeIn(150).siblings().hide();
			})

    });


</script>

