    //分享
    var jsummary = "这件螺钿漆盘属软螺钿镶嵌，底部有“千里”篆书款。江千里，字秋水，江苏扬州人，是嵌螺钿工艺巨匠，因...";
    var jtitle = "“千里”款黑漆嵌螺钿人物纹圆盘";
    if (jtitle != "") {
        var jiathis_config = {
            url: window.location.href,
            summary: jsummary,
            title: jtitle,
            shortUrl: false,
            hideMore: false
        };
    }

    $(function () {
        $(".imgstyle").find("a[rel='lightbox-group']").picbox();

        //changeSize($(".col-detail .detail > .imgstyle"));
        //changeSize($(".col-list .imgstyle"));
        $("#imglist .imgstyle ").each(function () {
            //changeSize($(this));
        });
        $("#imglist .imglist").owlCarousel({
            items: 3,
            navigation: true,
            pagination: false,
            slideSpeed: 500,
            navigationText: ["", ""],
            scrollPerPage: true,
            afterInit: function () {
                $("#imglist .imgstyle").each(function () {
                    //changeSize($(this));
                });
            }
        });
        $(".col-detail .detail .imglistbox .item").click(function () {
            $(".col-detail .detail .imglistbox .item").filter(".active").removeClass("active");
            $(this).addClass("active");
            //changeSize($(this));
            var src500 = $(this).find("img").data("src500");
            var src1000 = $(this).find("img").data("src");
            $(".col-detail .detail > .imgstyle").children("img").fadeOut("600", function () {
                $(".col-detail .detail > .imgstyle").children("img").attr("src", src500);
                $(".enlarge").attr("href", src1000);
                //changeSize($(".col-detail .detail > .imgstyle"));
            });
            $(".col-detail .detail > .imgstyle").children("img").fadeIn("normal");
        });
    });


</script>
