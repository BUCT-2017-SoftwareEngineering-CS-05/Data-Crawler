<script>
    function openNavbar() {
        $(".navbar").fadeIn(300);
        $(document.body).css("overflow", "hidden");
    }
    function closeNavbar() {
        $(".navbar").fadeOut(300);
        $(document.body).css("overflow", "auto");
    }
</script>
