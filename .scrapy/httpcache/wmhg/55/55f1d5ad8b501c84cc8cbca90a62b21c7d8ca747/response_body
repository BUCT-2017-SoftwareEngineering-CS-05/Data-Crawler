        }

                     window.location.href = "/searchs/keywords/" + encodeURI(keywords);    });
   
})
function keydown(e, but) {
    var currKey=0,e=e||event;
    var _this = $(but);

    if(e.keyCode==13)
    {
        _this.click();
        return false;
    }
}
