<script>
$(function(){
	var as = audiojs.createAll();
	
	$('.section2 .fl').on('click', function(){
		var $this = $(this);
		var anow = as[0];
		
		if(!$this.hasClass('cur')){
			$this.addClass('cur');
			anow.play();
		}else{
			$this.removeClass('cur');
			anow.pause();
		}
	})
	
	var uid = '';
	$('.nav-lv1 .fri').eq(3).addClass('cur');
	$('.nav-lv1 .fri').eq(3).find('.nav-item').eq(0).addClass('cur');
	if( uid != '' ) {
		$('.collect').on('click', function(){
			if(!$(this).hasClass('clk')){
				$(this).addClass('clk');
			}
		});
	}

	
	$('.slick-mod').on('init', function(e, s){
		var pad1 = '', pad2 = '';
		
		if(s.currentSlide < 9) pad1 = '0';
		if(s.slideCount < 10) pad2 = '0';

		$('.slick-paging').text(pad1 + (s.currentSlide + 1) + ' / ' + pad2 + s.slideCount);
	});

	$('.slick-mod').on('afterChange', function(e, s, c){
		var pad1 = '', pad2 = '';
		
		if(c < 9) pad1 = '0';
		if(s.slideCount < 10) pad2 = '0';

		$('.slick-paging').text(pad1 + (c + 1) + ' / ' + pad2 + s.slideCount);
	});

	$('.slick-mod').slick({
		appendArrows: '.slick-nav'
	});	
	
///	
});
</script>
<script type="text/javascript">
var uid = '';
if( uid != '' ) {
  $('#soucang').each(function(idx){
	    var _this = $(this);
	    var ids = _this.attr('data-id');
	    $.post( "/member/favorite_status.html"+'?'+Math.random() , { ids : ids } , function( data ) {
	        if(data['is_favorite'].length == 1){
	            _this.html('已收藏');
	            _this.attr('title','已收藏');
	            _this.addClass('clk');
	        }else{
	            _this.html('收藏');
	            _this.attr('title','收藏');
	            _this.removeClass('clk');
	        };
	    })
	})
} 
$(document).on('click', '#soucang', function() {
    var uid = '';
    if( uid == '' ) {
    	var href1=window.location.pathname;
        my_alert( '请先登录再收藏' , function() {
            window.open( "/passport/login.html?"+href1 , "_self" );
        });
        return false;
    } else {
        var _this = $(this);
        var idk = _this.attr('data-id');
        var lable = _this.attr('data-lable');
        var status = _this.attr('title');
        if (status == '已收藏') {
            $.post("/member/remove_favorite.html"+'?'+Math.random(), {primaryId: idk}, function (data) {
                my_alert(data['info']);
                _this.html('收藏');
                _this.attr('title', '收藏');
                _this.removeClass('clk');
                return false;
            });
        } else {
            $.post("/member/collection.html"+'?'+Math.random(), {primaryId: idk, label: lable}, function (data) {
                if (data['status'] == '1') {
                    my_alert('收藏成功');
                    _this.html('已收藏');
                    _this.attr('title', '已收藏');
                    _this.addClass('clk');
                    return false;
                } else {
                    my_alert(data['info']);
                    return false;
                }
            });
        }
    }
})
$(function(){
	$('#submits').on('click',function(){
		var href1=window.location.pathname;
		var contents = $('#content').val();
		if( window.ISLONGIN === false){
			my_alert("请先登录",function(){
				window.location.href = "/passport/login.html?"+href1;
			})
		}else{
			if(contents.length <= 10){
				my_alert("输入字符数不得少于10字");
				return false;
			}
			$.post('/comment/send/collection.html',{ id:474,content:contents},function(idx){
				if(idx.status == 1){
					my_alert("评论成功",function(){
						window.location.reload();
					})
					return false;
				}else{
					my_alert(idx.info);
					return false;
				}
			})
		}
	})
});

</script>
