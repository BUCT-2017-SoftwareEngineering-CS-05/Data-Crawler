// 高亮
function navgldetail() {
    var categoryURL = "/focusnews.html" ;
    if(categoryURL == '/elegant/demeanor.html' || categoryURL == '/feeling.html'){
    	$('.nav-lv1 .fri').eq(4).addClass('cur');
		$('.nav-lv1 .fri').eq(4).find('.nav-item').eq(4).addClass('cur');
    }
    if(categoryURL == '/latest_protect.html' || categoryURL == '/latest_recover.html'){
    	$('.nav-lv1 .fri').eq(5).addClass('cur');
        $('.nav-lv1 .fri').eq(5).find('.nav-item').eq(3).addClass('cur');
    }
}
navgldetail();
