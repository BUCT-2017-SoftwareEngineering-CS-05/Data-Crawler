});
</script>
<script type="text/javascript">
var uid = '';
if( uid != '' ) {
  $('#soucang').each(function(idx){
	    var _this = $(this);
	    var ids = _this.attr('data-id');
	    $.post( "/member/favorite_status.html"+'?'+Math.random() , { ids : ids } , function( data ) {
	        if(data['is_favorite'].length == 1){
	            _this.html('已收藏');
	            _this.attr('title','已收藏');
	            _this.addClass('clk');
	        }else{
	            _this.html('收藏');
	            _this.attr('title','收藏');
	            _this.removeClass('clk');
	        };
	    })
	})
} 
$(document).on('click', '#soucang', function() {
    var uid = '';
    if( uid == '' ) {
    	var href1=window.location.pathname;
        my_alert( '请先登录再收藏' , function() {
            window.open( "/passport/login.html?"+href1 , "_self" );
        });
        return false;
    } else {
        var _this = $(this);
        var idk = _this.attr('data-id');
        var lable = _this.attr('data-lable');
        var status = _this.attr('title');
        if (status == '已收藏') {
            $.post("/member/remove_favorite.html"+'?'+Math.random(), {primaryId: idk}, function (data) {
                my_alert(data['info']);
                _this.html('收藏');
                _this.attr('title', '收藏');
                _this.removeClass('clk');
                return false;
            });
        } else {
            $.post("/member/collection.html"+'?'+Math.random(), {primaryId: idk, label: lable}, function (data) {
                if (data['status'] == '1') {
                    my_alert('收藏成功');
                    _this.html('已收藏');
                    _this.attr('title', '已收藏');
                    _this.addClass('clk');
                    return false;
                } else {
                    my_alert(data['info']);
                    return false;
                }
            });
        }
    }
})
$(function(){
	$('#submits').on('click',function(){
		var href1=window.location.pathname;
		var contents = $('#content').val();
		if( window.ISLONGIN === false){
			my_alert("请先登录",function(){
				window.location.href = "/passport/login.html?"+href1;
			})
		}else{
			if(contents.length <= 10){
				my_alert("输入字符数不得少于10字");
				return false;
			}
			$.post('/comment/send/collection.html',{ id:476,content:contents},function(idx){
				if(idx.status == 1){
					my_alert("评论成功",function(){
						window.location.reload();
					})
					return false;
				}else{
					my_alert(idx.info);
					return false;
				}
			})
		}
	})
});

</script>
