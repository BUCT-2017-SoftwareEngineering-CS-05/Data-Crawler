    function getPage( obj ) {
        var url = obj.attr('href')+'?'+Math.random();
          // console.log(url);
        if( url == 'javascript:void(0);' ) {
            return false;
        }
        // $.ajaxSetup({cache:false});
        $.get( url , {} , function( data ) {
            $('#datalist').html( data );
            $('html,body').animate({ scrollTop : parseInt( $('#datalist').offset().top - 230 )} , 500 );
        })
    }
