<script>
$(function(){
	var as = audiojs.createAll();
	
	$('.section2 .fl').on('click', function(){
		var $this = $(this);
		var anow = as[0];
		
		if(!$this.hasClass('cur')){
			$this.addClass('cur');
			anow.play();
		}else{
			$this.removeClass('cur');
			anow.pause();
		}
	})
	
	var uid = '';
	$('.nav-lv1 .fri').eq(3).addClass('cur');
	$('.nav-lv1 .fri').eq(3).find('.nav-item').eq(0).addClass('cur');
	if( uid != '' ) {
		$('.collect').on('click', function(){
			if(!$(this).hasClass('clk')){
				$(this).addClass('clk');
			}
		});
	}

	
	$('.slick-mod').on('init', function(e, s){
		var pad1 = '', pad2 = '';
		
		if(s.currentSlide < 9) pad1 = '0';
		if(s.slideCount < 10) pad2 = '0';

		$('.slick-paging').text(pad1 + (s.currentSlide + 1) + ' / ' + pad2 + s.slideCount);
	});

	$('.slick-mod').on('afterChange', function(e, s, c){
		var pad1 = '', pad2 = '';
		
		if(c < 9) pad1 = '0';
		if(s.slideCount < 10) pad2 = '0';

		$('.slick-paging').text(pad1 + (c + 1) + ' / ' + pad2 + s.slideCount);
	});

	$('.slick-mod').slick({
		appendArrows: '.slick-nav'
	});	
	
