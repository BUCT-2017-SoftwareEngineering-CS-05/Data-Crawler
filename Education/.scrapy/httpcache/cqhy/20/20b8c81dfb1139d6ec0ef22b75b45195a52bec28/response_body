            <script>
				$(function () {
				  var sWidth_new = $(".main-guide-list ul li").width(); //获取焦点图的宽度（显示面积）
				  var len_new = $(".main-guide-list ul li").length; //获取焦点图个数
				  var index_new = 0;
				  var picTimer_new = 0;
				  //本例为左右滚动，即所有li元素都是在同一排向左浮动，所以这里需要计算出外围ul元素的宽度
				  $(".main-guide-list ul").css("width", sWidth_new * len_new);

				  //鼠标滑上焦点图时停止自动播放，滑出时开始自动播放
				  $(".main-guide-list").hover(function () {
					  clearInterval(picTimer_new);
				  }, function () {
					  picTimer_new = setInterval(function () {
						  if (index_new < len_new-1) {
							  index_new++;
						  } else {
							  index_new = 0;
						  }
						  //alert(index_new);
						  showPics(index_new);
					  }, 
					  3000); //此3000代表自动播放的间隔，单位：毫秒
				  }).trigger("mouseleave");

				  /*$(".focus-abs span a:first").click(function () {
					  var num = index_new-1;
					  if( num < 0 ){
						  index_new = len_new-1;
					  }else{
						  index_new = num;
					  }
					  picTimer_new = 0;
					  showPics(index_new);
				  });

				  $(".focus-abs span a:last").click(function () {
					  var num = index_new+1;
					  if( num > len_new-1){
						  index_new = 0;
					  }else{
						  index_new = num;
					  }
					  picTimer_new = 0;
					  showPics(index_new);
				  });*/

				  //显示图片函数，根据接收的index值显示相应的内容
				  function showPics(index_new) { //普通切换
					  var nowLeft = -index_new * sWidth_new; //根据index值计算ul元素的left值
					  $(".main-guide-list ul").stop(true, false).animate({"left": nowLeft}, 800); //通过animate()调整ul元素滚动到计算出的position
					  
					  //var url_on = $(".main-guide-list ul li").eq(index_new).find('a').attr('href');
					  //$("#url_on").attr('href',url_on);
					  //alert(url_on); 
					  $(".tab-dot span").removeClass('on');
					  $(".tab-dot span").eq(index_new).addClass('on');
				  }
				});
			</script>


            
            
