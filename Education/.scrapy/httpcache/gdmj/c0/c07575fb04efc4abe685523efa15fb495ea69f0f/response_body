			function paging(curr,lx,ul,lj){ 
				$.ajax({
					url: "/MYwebsite/rc/selectWAT",
		            type: 'POST',
		            cache:false,
		            async:false,
		            data: {
		            	page:curr,
		            	size:9,
		            	articletype:lx,
		            	auditstatus:2
		            },
		            success: function(obj){
		            	
		            	countnum = obj.count; 
		            	
		            	var li = '';
		            	if(obj.data.length == 0){
							li = '<li style="background: none;width: 100%;font-size: 20px;text-align: center;height: 400px;line-height: 400px;">暂无数据</li>';
							$('.'+ul+'').append(li);
		            	}else{
		            		for(var i=0; i<obj.data.length; i++){
			            		var li = '<li>\
										<a href="my_jy_xq.htm?_htm='+obj.data[i].id+'&returnlx='+curr+'&lx=j7yk7e&lxs='+lx+'">\
											<img src="/MYwebsite'+obj.data[i].imgurl+'"/>\
											<p>'+obj.data[i].title+'</p>\
										</a>\
									</li>';
							$('.'+ul+'').append(li); 
			            	}
		            	} 
		            }
				})
			}
			
			
