        $(document).ready(function() {

          $("#topmenu_box").on('mouseenter',
          function() {

            if ($("body").width() > 1223) {

              $("#topmenu_box").addClass("on");
              $("#topmenu_box.on").stop().slideDown('fast');
              $("#topmenu ul ul").stop().slideDown('fast');

              $(".bg_menuover").stop().animate({
                height: '360px'
              },
              {
                queue: false,
                duration: 200,
                easing: 'easeInSine'
              });
              $("#hd").addClass("menuopen")
            }

          });
          $("#topmenu_box").on('mouseleave',
          function() {

            if ($("body").width() > 1223) {

              $("#topmenu_box").removeClass("on");
              $("#topmenu_box.on").stop().slideUp('fast');
              $("#topmenu ul ul").stop().slideUp('fast');

              $(".bg_menuover").stop().animate({
                height: '0'
              },
              {
                duration: 200,
                easing: 'easeInSine'
              });
              $("#hd").removeClass("menuopen");

            }

          });

        });</script>
         
