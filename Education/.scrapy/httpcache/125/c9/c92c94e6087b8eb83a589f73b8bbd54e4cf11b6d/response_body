		$(document).scroll(function() {
			var scroH = $(document).scrollTop();  //滚动高度
			if(scroH >100){  //距离顶部大于100px时
				$("#floatbtn").css("display","block");
			}else{
				$("#floatbtn").css("display","none");
			}
		});
	})
