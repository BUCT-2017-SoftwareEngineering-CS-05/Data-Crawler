<script type="text/javascript" src="/resource/js/jq/jqPaginator.js"></script>
<script type="text/javascript">
	//栏目编号
	var itemNo = $("#js-itemparentno").val(); 
	//父级栏目编号
	var parentItemNo = $("#js-itemno").val();
	var type = '';
	$(function(){
		getEduItems(itemNo, parentItemNo);
		var pagenumber = 1;
		var pagesize = 6;
		loadData(pagenumber,pagesize);
	})
    $(".edu_review_list li").on("mouseover",function () {
        $(this).find("p.biaoti").addClass("fontColor_blue");
    }).on("mouseout",function () {
        $(this).find("p.biaoti").removeClass("fontColor_blue");
    });
	
	//获取精彩回顾
	function loadData(pagenumber,pagesize){
		var params = {};
		params.itemno = itemNo;
		params.pageNumber = pagenumber;
		params.pageSize = pagesize;
		$.ajax({
			url: 'web/article/findArticleAndPage.do',
	        async: false,
	        type: 'post',
	        data: params,
	        dataType: 'json',
	        success: function (data) {
	        	var count = data.count;
	        	 var totalPages =count%pagesize==0?count/pagesize:count/pagesize+1;
	     		totalPages = parseInt(totalPages);
	            var html = '';
	            $(".edu_review_list").html(html);
	            for (var i = 0; i < data.list.length; i++) {
	                var createtime =data.list[i].releasetime.substr(0,10);
	                var reg = /^(\d{4})-(\d{1,2})-(\d{1,2})$/;
	                var createtime_year, createtime_date;
	                if (createtime.match(reg)){
	                    createtime_year = RegExp.$1;
	                    createtime_date = RegExp.$2 +"/"+RegExp.$3;
	                }
	                var pageindexno = (pagenumber-1)*pagesize+i+1;
	                var content=getChinese(data.list[i].contents)

	                html += "<li><a href='web/article/toArticleNo.do?itemno="+parentItemNo.trim()+"&itemsonno="+itemNo.trim()+"&articleno="+data.list[i].recno.trim()
	                		+"&pageindex="+pageindexno+"'><div class='activity_review clearFloat' data_articleno="+data.list[i].recno+" data_pageindexno="+pageindexno
	                		+"><div class='review_date floatLeft'><span class='monthDay'>"+createtime_date+"</span><span class='year'>&nbsp;&nbsp;&nbsp;"
	                		+createtime_year+"</span></div><div class='review_detail floatLeft'><p class='biaoti'>"+data.list[i].subject+"</p><p class='summary'>"
	                		+content.substring(0,50)+"</p></div></div></li>";
	            }
	            $(".edu_review_list").html(html);
	            
	         // 分页
	    		pageNationDo(totalPages, pagenumber, pagesize);
	        }
	    });
	}
	
	/**
	 * 分页
	 * @param index
	 * @returns {Boolean}
	 */
	function selectPageCallback(index){
		loadData(index);
		return false;
	}
	//过滤html标签(数据库中保存的)
	 function getChinese(str) {
	   str = str.replace(/<\/?[^>]*>/g, '');//去除HTML tag
	   str = str.replace(/[ | ]*\n/g, '\n');//去除行尾空白
	   str = str.replace(/\n[\s| | ]*\r/g, '\n');//去除多余空行
	   str = str.replace(/\s/g, '');//去除多余空行
	   str = str.replace(/&nbsp;/ig, '');//去掉&nbsp;
	   return str;
	 };
 </script>
 

</body></html>