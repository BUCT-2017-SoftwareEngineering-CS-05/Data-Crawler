<script type="text/javascript">
		/*控制搜索页面的跳转，当前页面是搜索页面则刷新当前页面，否则打开新的页面*/
		$("#Header_search").click(function() {
			var currentUrl = window.location.pathname;
			var searchcondition = $(".js_searchcondition").val()
			if(currentUrl=="/web/tosearch.do"){
				window.location.href = "/web/tosearch.do?searchcondition="+encodeURI($(".js_searchcondition").val());
			}else{
				doPost("web/tosearch.do",{"searchcondition":searchcondition});
			}
		});
	
	$(function(){
		$.post("web/user/getTag.do", { "tagtype": "Header_" },
          function(data){
	          for(var i in data){
	          	$("#"+data[i].tagName).html(data[i].tagValue);
	          }
          }, "json");
	});
	
	function changeLang(type){
		$.post("web/user/changeLang.do", { "langtype":type},
          function(data){
          	if(type=="简体中文"){
          		location.href="/";
          	}else{
          		location.href="/web/item/findleftitemByitemnoCenter.do?itemno=402880b25a49f552015a4ac05b850000&itemsonno=1"
          	}
         }, "json");
	}
 	function getUrl(){
 		var pathname =location.pathname;
		if(pathname=="/"||pathname==null){							
			window.location.href="web/user/toregister.do";
		}else if(pathname=="/web/user/register.do"){
			window.location.reload();
		}else{
	 		var search = location.search;
	 		
			window.location.href="web/user/register.do?url="+encodeURIComponent(pathname+search); 		
		}
	};
	 // 点击打开登录页面
	function showCommentBox(){		
		$(".hide-center").fadeIn("slow");
		$(".overCurtain").fadeIn("slow");					
	}
	//关闭登录页面
	$("#close").click(function () {
	    $(".hide-center").fadeOut("slow")
	    $(".overCurtain").fadeOut("slow")
	});
	//刷新验证码
	$("#kaptchaImage").click(function () {
	    $(this).prop("src","/kaptcha/getKaptchaWebImage.do");
	});
	$("#loginKpa").on("blur",function(){
		var kpa=$("#loginKpa").val();
		checkKPA(kpa);
	});
	
	function checkKPA(kpa){
		if(kpa==''||kpa==null){
	    	showTips('请输入验证码!',2500,0);
	    }else{
	    	var param = {};
			param.kpa = kpa;
			$.ajax({
	            type: "post",
	            url : "/kaptcha/checkKPA.do",
	            dataType: "json",
	            data: param,
	        	success: function(data){
	        		if (data.code!=200) {
						showTips(data.msg,2500,0);
					}
	        	}
	       });
	    }
	}
	//登录提交
	function confirmUpdate(){
		 var loginName = $("#loginName").val();
		 var password=$("#password").val();
		 var kpa=$("#loginKpa").val();
		 var map={};
		    if(loginName==''||loginName==null){
		    	showTips('请输入登录名!',2500,0);
		    }else if(password==''||password==null){
		    	showTips('请输入密码!',2500,0);
		    }else if(kpa==''|| kpa==null){
		    	showTips('请输入验证码!',2500,0);
		    }else{
		        map.username=loginName;
		        map.pwd = md5(password);
		        map.kpa = kpa;
		        $.ajax({
		            type: "post",
		            url : "web/user/login.do",
		            dataType:'json',
		            data: map,
	            	success: function(data){		                
		                if(data.status == 0){		                 
		                    showTips(data.msg,2500,0);
		                    return false;
		                }else{
		                	location.reload();
		                	$(".loginname").text(data.s_loginname);
		            		$(".login").hide();
		            		$(".logined").show();		            		
		            		layer.closeAll();
		                }
	            	}
		        });
		    }
		}
	//去注册
	function registe(){
		window.location="/web/user/toregister.do";
	}
	//退出登录状态
	function loginout(){
		 $.ajax({
	            type: "post",
	            url : "web/user/loginOut.do",
	            dataType:'json',
         		success: function(data){		                
	                if(data.data == 1){		                 
	                	location.reload();
	                }else{	                
	                }
         	}
	        
		 });
	}

</script>

  	

