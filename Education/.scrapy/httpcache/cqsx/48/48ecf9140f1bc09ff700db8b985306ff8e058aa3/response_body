<script type="text/javascript">
$(function(){
	findLink();
	getFastTrak();
	
	//删除意外产生的div
	function removeerrordiv(){
		//取出最后一个div
		var styleinfo = $("body>div:last").attr("style");
		if(styleinfo == "color: rgb(255, 255, 255); position: fixed; top: 0px; left: 0px; z-index: 100000;"){
			$("body>div:last").remove();
			clearInterval(timeint);
		}
	}
	
	var timeint = setInterval(removeerrordiv,50);
	
});



function findLink(){

	$.post("web/link/findAllLinks.do", function(data){	
		var link=""
		 for(var i in data){ 
		     link +="<li><a class='freLink color_white' width=140 height=33 target='_blank' href='"+data[i].url+"'>"+data[i].name+"</a></li>";
		  }
		    $("#friend_link_ul").html(link); 
	      }, "json");      	
}

function  getFastTrak(){
	$.post("web/item/findFastItem.do",{"itemno":"1"},function(data){
		var list=data.list;
		var html1="";
		var html2="";
   		for(var i=0;i<list.length;i++){
   			var parent = list[i].parent;
	   		var children = list[i].children;
	   		var loginuser = $("#header").attr("data-user");
   			if(i<=4){  				 	   			
   				if (parent.name == "我的"||parent.name == "Personal"){
   					
   	   			}else{ 					
   	   				html1+="<li ><span class='first_item'>"+parent.name.trim()+"<span class='cutLine'></span></span><span class='second_item'>";
   	   				if(children !=null){
   	   					for(var j=0;j<children.length;j++){
   	   	   					var type1 = children[j];
   	   	   					if(j>=children.length-1){
   	   	   						html1 +="<a class='channel_a' target='_blank' href='"+type1.itemUrl+"?itemno="+type1.parentNo.trim()+"&itemsonno="+type1.recNo.trim()+"'><span  class='color_white'>"+type1.name.trim()+"</span></a>";
   	   	   					}else{
   	   	   						html1 +="<a class='channel_a' target='_blank' href='"+type1.itemUrl+"?itemno="+type1.parentNo.trim()+"&itemsonno="+type1.recNo.trim()+"'><span class='color_white'>"+type1.name.trim()+"</span></a><span class='cutLine'></span>";
   	   	   					}
   	   	   				}
   	   				}else {
   						html1 += "<a class='channel_a' target='_blank' href='"+parent.itemUrl+"?itemno="+parent.parentNo.trim()+"&itemsonno="+parent.recNo.trim()+"'><span class='color_white'>"+parent.name.trim()+"</span></a>";
   					}
   	   				html1 +="</span></li>";	
   	   			}
   	   			$(".fast-track-ul_left").html(html1);
   			}else{
   				if(parent.name == "我的"||parent.name == "Personal"){
   					
   	   			}else{ 					
 	   				html2+="<li ><span class='first_item'>"+parent.name.trim()+"<span class='cutLine'></span></span><span class='second_item'>";
 	   				if(children !=null){
 	   					for(var j=0;j<children.length;j++){
 	   	   					var type1 = children[j];
 	   	   					if(j>=children.length-1){
 	   	   						html2 +="<a class='channel_a' target='_blank' href='"+type1.itemUrl+"?itemno="+type1.parentNo.trim()+"&itemsonno="+type1.recNo.trim()+"'><span class='color_white'>"+type1.name.trim()+"</span></a>";
 	   	   					}else{
 	   	   						html2 +="<a class='channel_a' target='_blank' href='"+type1.itemUrl+"?itemno="+type1.parentNo.trim()+"&itemsonno="+type1.recNo.trim()+"'><span class='color_white'>"+type1.name.trim()+"</span></a><span class='cutLine'></span>";
 	   	   					}
 	   	   				}
 	   				}else {
 						html2 += "<a class='channel_a' target='_blank' href='"+parent.itemUrl+"?itemno="+parent.parentNo.trim()+"&itemsonno="+parent.recNo.trim()+"'><span class='color_white'>"+parent.name.trim()+"</span></a>";
 					}
 	   				html2 +="</span></li>";	
   	   			$(".fast-track-ul_right").html(html2);
   	   			}
   			} 	
		}
	},"json");
}


